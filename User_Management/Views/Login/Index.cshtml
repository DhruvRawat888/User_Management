@model User_Management.Data.UserLogin

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_modified.cshtml";
}

<div class="container">

    <div class="d-flex justify-content-center">
        <div class="card">
            <div class="card-header">
                <h3>Login</h3>
            </div>

            <div class="card-body">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                   
                    if(ViewBag.LoginStatus != null)
                    {
                     if(ViewBag.LoginStatus == 0)
                     {
                         <div class="alert alert-danger">Invalid login details</div>
                     }
                    
                    }
                    
                    <div>
                        Email Address :
                        @Html.TextBoxFor(m=>m.EmailAddress,new{@class="form-control",@placeholder="Email Address",required="required"})
                    </div>



                    <div>
                        Password :
                        @Html.PasswordFor(m=>m.Password,new{@class="form-control",@placeholder="Password",required="required"})
                    </div>


                    <div>

                        <input type="submit" value="Login" class="btn float-right btn-dark">
                        <input type="reset" value="Cancel" class="btn float-right btn-outline-dark">
                    </div>

                }
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Register new account?<a href="https://localhost:7295/Registration/Signup">Sign-Up</a>
                </div> <div class="d-flex justify-content-center links">
                    <a href="#">Forgot your password</a>
                </div>
            </div>

        </div>
    </div>
</div>